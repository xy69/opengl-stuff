{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: configure (MinGW Release)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build",
        "-G",
        "MinGW Makefiles",
        "-DCMAKE_BUILD_TYPE=Release"
      ],
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "label": "CMake: build (Release)",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "build", "--config", "Release", "--", "-j"],
      "problemMatcher": ["$gcc"],
      "group": "build",
      "dependsOn": "CMake: configure (MinGW Release)"
    },
    {
      "label": "clang-format: format",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "build", "--target", "format"],
      "problemMatcher": []
    }
  ]
}
